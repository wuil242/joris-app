@if(label)
<div>
  @!component('form/form_rule', {rule, rules})
  <label for="{{name}}" class="form-label {{required ? 'required' : ''}}">{{label}}</label>
</div>
@endif
<input 
  {{--  {{required ? 'required' : ''}}    --}}
  type="{{type || 'text'}}" 
  class="form-input {{flashMessages.has('errors.'+ name) ? 'is-error' : ''}}" name="{{name}}"
  placeholder="{{placeholder ? placeholder : ''}}"
  value="{{value || flashMessages.has(name) ? flashMessages.get(name) : ''}}"
  maxlength="{{maxLength || ''}}"
  minlength="{{minlength || ''}}"
/>
@!component('form/form_error', {name})
  
