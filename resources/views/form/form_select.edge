<div class="form-select js-select">
  <select name="{{name}}" hidden value="{{value[optionValue.toString()]}}">
    @each(option in options)
      <option 
        {{value[optionValue.toString()] === option[optionValue.toString()] ? 'selected' : ''}}
        value="{{option[optionValue.toString()]}}"
      >
        {{option[optionContent.toString()]}}
      </option>
    @endeach
  </select>
  <button type="button" class="form-select-button js-select-button">    
    <span>{{ value[optionContent.toString()] }}</span>
    <i class="fa fa-chevron-down"></i>
  </button>
  <div class="form-select-content js-select-content">
    <div class="form-select-search">
      <input class="form-select-input js-form-select-input" type="search">
      <i class="form-select-search-icon js-form-select-search-icon fa fa-search"></i>
    </div>
    <ul class="form-select-options js-slelect-options">
      @each(option in options)
        <li class="form-select-option js-slelect-option" data-value="{{option[optionValue.toString()]}}">
          {{option[optionContent.toString()]}}
        </li>
      @endeach
    </ul>
  </div>
</div>
